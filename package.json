{
  "name": "sling-framework",
  "description": "Sling Web Framework main repo.",
  "version": "1.2.0",
  "private": true,
  "flat": true,
  "scripts": {
    "version-bump": "./node_modules/.bin/lerna publish --skip-git --skip-npm",
    "prepublish-packages": "npm install",
    "publish-packages": "./node_modules/.bin/lerna exec --bail=false -- npm publish",
    "start": "node ./scripts/server.js",
    "build-dev": "./node_modules/.bin/cross-env NODE_ENV=es BABEL_ENV=es-bundle BUILD_TYPE=dev node ./scripts/build.js",
    "build-es-package": "./node_modules/.bin/cross-env NODE_ENV=es BABEL_ENV=es-package BUILD_TYPE=dist node ./scripts/build.js",
    "build-cjs-package": "./node_modules/.bin/cross-env NODE_ENV=cjs BABEL_ENV=cjs-package BUILD_TYPE=dist node ./scripts/build.js",
    "build-es-bundle": "./node_modules/.bin/cross-env NODE_ENV=es BABEL_ENV=es-bundle BUILD_TYPE=dist node ./scripts/build.js",
    "build-cjs-bundle": "./node_modules/.bin/cross-env NODE_ENV=cjs BABEL_ENV=cjs-bundle BUILD_TYPE=dist node ./scripts/build.js",
    "build": "npm run build-es-package && npm run build-cjs-package && npm run build-es-bundle && npm run build-cjs-bundle",
    "lint": "./node_modules/.bin/eslint ./packages/**/*.js",
    "pretest": "./node_modules/.bin/eslint ./packages/**/*.js",
    "test": "./node_modules/.bin/cross-env NODE_ENV=karma karma start karma.conf.js",
    "test-unit": "mocha-webpack --colors --webpack-config webpack.config-test.js \"packages/*/src/**/*.spec.js\"",
    "coverage": "cross-env NODE_ENV=coverage nyc npm run test-unit --colors",
    "send-coverage": "cat ./coverage/unit/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "postinstall": "./node_modules/.bin/lerna bootstrap"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.6",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "faker": "^4.1.0",
    "fs-extra": "^5.0.0",
    "globby": "^8.0.1",
    "http-server": "^0.11.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^2.0.5",
    "karma-chai": "^0.1.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "lerna": "^2.9.0",
    "lodash": "^4.17.10",
    "mocha": "^5.1.1",
    "mocha-webpack": "^2.0.0-beta.0",
    "nyc": "^13.0.1",
    "postcss": "^6.0.21",
    "postcss-import": "^11.1.0",
    "puppeteer": "^1.3.0",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "shelljs": "^0.8.1",
    "sinon": "^5.0.3",
    "sinon-chai": "^3.2.0",
    "string-replace-async": "^1.2.1",
    "webpack": "^4.6.0",
    "webpack-node-externals": "^1.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stone-payments/sling-framework.git"
  },
  "author": "Stone Pagamentos",
  "bugs": {
    "url": "https://github.com/stone-payments/sling-framework/issues"
  },
  "homepage": "https://github.com/stone-payments/sling-framework#readme",
  "resolutions": {
    "eslint-scope": "3.7.1"
  },
  "nyc": {
    "include": [
      "packages/**/src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "**/*.test.js",
      "**/*.bundle.js",
      "**/mocha-webpack"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "all": true,
    "report-dir": "./coverage/unit"
  }
}
